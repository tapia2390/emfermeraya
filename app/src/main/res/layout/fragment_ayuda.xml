<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.3dp"
            android:orientation="horizontal">

            <com.enfermeraya.enfermeraya.customfonts.MyTextView_Poppins_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="32dp"
                android:gravity="center_horizontal"
                android:text="Ayuda"
                android:textColor="#333232"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="7.3dp"
                    android:background="@drawable/small_cicle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/half_circle"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/half_circle" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp"
            android:layout_margin="15sp">



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:id="@+id/lypreguntas"
                   android:clickable="true">

                   <ImageView
                       android:layout_width="25sp"
                       android:layout_height="25sp"
                       android:background="@drawable/ayuda"/>


                   <com.enfermeraya.enfermeraya.customfonts.MyTextView_Poppins_Medium
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom"
                       android:layout_marginLeft="10dp"
                       android:gravity="center_horizontal"
                       android:text="Preguntas Frecuentes"
                       android:textColor="#333232"
                       android:textSize="15sp" />
               </LinearLayout>

               <Space
                   android:layout_width="match_parent"
                   android:layout_height="15sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:id="@+id/lycontacto"
                   android:clickable="true">

                   <ImageView
                       android:layout_width="25sp"
                       android:layout_height="25sp"
                       android:background="@drawable/contacto"/>


                   <com.enfermeraya.enfermeraya.customfonts.MyTextView_Poppins_Medium
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom"
                       android:layout_marginLeft="10dp"
                       android:gravity="center_horizontal"
                       android:text="Contactanos"
                       android:textColor="#333232"
                       android:textSize="15sp" />
               </LinearLayout>

               <Space
                   android:layout_width="match_parent"
                   android:layout_height="15sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:clickable="true"
                   android:id="@+id/lycondiciones">

                   <ImageView
                       android:layout_width="25sp"
                       android:layout_height="25sp"
                       android:background="@drawable/condiciones"/>


                   <com.enfermeraya.enfermeraya.customfonts.MyTextView_Poppins_Medium
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom"
                       android:layout_marginLeft="10dp"
                       android:gravity="center_horizontal"
                       android:text="Condiciones y privacidad"
                       android:textColor="#333232"
                       android:textSize="15sp" />
               </LinearLayout>


               <Space
                   android:layout_width="match_parent"
                   android:layout_height="15sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:id="@+id/lyinfo"
                   android:clickable="true">

                   <ImageView
                       android:layout_width="25sp"
                       android:layout_height="25sp"
                       android:background="@drawable/info"/>


                   <com.enfermeraya.enfermeraya.customfonts.MyTextView_Poppins_Medium
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="bottom"
                       android:layout_marginLeft="10dp"
                       android:gravity="center_horizontal"
                       android:text="Info. de la aplicaciÃ³n"
                       android:textColor="#333232"
                       android:textSize="15sp" />
               </LinearLayout>



        </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21.6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="85.6dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#d2d2d2" />

            <com.enfermeraya.enfermeraya.customfonts.MyTextView_Poppins_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Nuestras redes sociales"
                android:textColor="#aeaeae"
                android:textSize="15sp" />

            <View
                android:layout_width="85.6dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#d2d2d2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26.6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fb"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/ins"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/instagram" />

            <ImageView
                android:id="@+id/tw"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/in"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:src="@drawable/linkedin" />

        </LinearLayout>




    </LinearLayout>


</RelativeLayout>