<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MiCuenta.AyudaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorFondo"
        android:paddingTop="@dimen/espacio"
        android:id="@+id/mRlView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Perfil"
                android:textColor="@color/colorBlanco"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <ImageView
                android:id="@+id/camara1"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/camara"
                android:onClick="camara1" />



            <TextView
                android:id="@+id/txt_camara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/fotoU"
                android:textColor="@color/colorBlanco"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15sp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:background="@drawable/blanco_post_border_style">

                        <ImageView

                            android:layout_gravity="center"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/person"
                            android:background="@drawable/fondoicono_post_border_style"/>

                        <EditText
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txt_nombre"
                            android:hint="@string/nombreU"
                            android:inputType="textAutoCorrect"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/blanco_post_border_style"
                            android:paddingLeft="5sp"
                            android:textStyle="normal"
                            android:textColorHint="@color/colorAzulClaro"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>





                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp" />



                    <LinearLayout
                        android:id="@+id/layut1"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:background="@drawable/blanco_post_border_style">

                        <ImageView

                            android:layout_gravity="center"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/person"
                            android:background="@drawable/fondoicono_post_border_style"/>

                        <EditText
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txt_apellido"
                            android:hint="@string/apellidoU"
                            android:inputType="textAutoCorrect"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/blanco_post_border_style"
                            android:paddingLeft="5sp"
                            android:textStyle="normal"
                            android:textColorHint="@color/colorAzulClaro"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:background="@drawable/blanco_post_border_style"
                        android:id="@+id/layut2">

                        <ImageView

                            android:layout_gravity="center"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/btn_llamar"
                            android:background="@drawable/fondoicono_post_border_style"/>

                        <EditText
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txt_celular"
                            android:hint="@string/celularU"
                            android:inputType="phone"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/blanco_post_border_style"
                            android:paddingLeft="5sp"
                            android:textStyle="normal"
                            android:textColorHint="@color/colorAzulClaro"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <Space
                        android:id="@+id/space1"
                        android:layout_width="match_parent"
                        android:layout_height="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:background="@drawable/blanco_post_border_style">

                        <ImageView

                            android:layout_gravity="center"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/email"
                            android:background="@drawable/fondoicono_post_border_style"/>

                        <EditText
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txt_correo"
                            android:hint="@string/correoU"
                            android:inputType="textEmailAddress"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/blanco_post_border_style"
                            android:paddingLeft="5sp"
                            android:textStyle="normal"
                            android:editable="false"
                            android:focusable="false"
                            android:textColorHint="@color/colorAzulClaro"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp" />



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20sp" />


                    <Button
                        android:id="@+id/btnupdate"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:onClick="validar"
                        android:text="@string/actualizar"
                        android:textColor="@color/colorFondo"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp" />


                    <Button
                        android:id="@+id/btncerrar"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:text="@string/cerrarSesion"
                        android:textColor="@color/colorFondo"
                        android:textStyle="bold"
                        />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>