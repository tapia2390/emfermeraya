<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear tarjeta"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_cardnumber"
            android:background="@drawable/border"
            android:selectAllOnFocus="false"
            android:hint="Card Number"
            android:text=""
            android:layout_column="0"
            android:maxLength="16" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/txt_month"
                android:maxLength="2"
                android:hint="Mes"
                android:text=""
                android:background="@drawable/border"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/txt_year"
                android:maxLength="2"
                android:hint="AÃ±o"
                android:text=""
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginLeft="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/txt_cvv"
                android:background="@drawable/border"
                android:layout_marginLeft="6dp"
                android:hint="CVV"
                android:text=""
                android:gravity="center"/>



        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@drawable/border"
            android:id="@+id/txt_email"
            android:hint="Correo electronico"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_month"/>




        <Button
            android:text="Crear tarjeta"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:id="@+id/btn_pay"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt_email"
            android:textColor="@color/mdtp_white"
            android:background="@drawable/fondo_post_border_style"
            android:layout_gravity="center"
            />



        <Button
            android:text="Pagar"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:id="@+id/btn_pagar"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt_email"
            android:textColor="@color/mdtp_white"
            android:background="@drawable/fondo_post_border_style"
            android:layout_gravity="center"
            android:visibility="gone"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kind_card"
            android:textSize="18sp"
            android:layout_below="@+id/btn_pay"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/token_id"
            android:textSize="18sp"
            android:layout_below="@+id/btn_pay"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

    </LinearLayout>


</RelativeLayout>