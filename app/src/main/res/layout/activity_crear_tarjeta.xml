<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFF"
    style="@style/loginParent">
    <ScrollView
        style="@style/parent">

        <RelativeLayout
            style="@style/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:background="@drawable/login_shape_bk2"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk2"
                        android:contentDescription="" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">


                <TextView
                    style="@style/headerText"
                    android:layout_gravity="center"
                    android:text="Crear tarjeta"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="200sp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_cardnumber"
                        android:layout_toRightOf="@+id/username_icon"
                        android:hint="Número de la tarjeta"
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/username_icon"
                        android:src="@drawable/pagos"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="62dp"
                    android:layout_marginTop="10dp">


                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_month"
                        android:layout_toRightOf="@+id/icon"
                        android:hint="Mes"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_border_rounded_cornwe"/>


                    <Space
                        android:layout_width="5sp"
                        android:layout_height="wrap_content"/>
                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_year"
                        android:layout_toRightOf="@+id/icon"
                        android:hint="Año"
                        android:textSize="12sp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/blue_border_rounded_cornwe"/>

                    <Space
                        android:layout_width="5sp"
                        android:layout_height="wrap_content"/>

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_cvv"
                        android:layout_toRightOf="@+id/icon"
                        android:hint="CVV"
                        android:textSize="12sp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/blue_border_rounded_cornwe"/>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="62dp"
                    android:layout_marginTop="12.7dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_email"
                        android:layout_toRightOf="@+id/icon"
                        android:hint="Correo "
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/icon"
                        android:src="@drawable/email"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>







                <Button
                    android:text="Pagar"
                    android:layout_width="150sp"
                    android:layout_height="30sp"
                    android:id="@+id/btn_pagar"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/txt_email"
                    android:textColor="@color/mdtp_white"
                    android:background="@drawable/fondo_post_border_style"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="62dp"
                    android:layout_marginTop="18.7dp"
                    android:text="Crear tarjeta"
                    android:background="@drawable/login_button_bk"
                    />


            </LinearLayout>

        </RelativeLayout>




    </ScrollView>

</RelativeLayout>


