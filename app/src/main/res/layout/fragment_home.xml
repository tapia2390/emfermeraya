<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="30sp">
        <!--android:layout_alignParentBottom="true"-->

        <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:text=""
                android:textStyle="bold"
                android:gravity="left|center"
                android:layout_gravity="left|center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:orientation="horizontal"
                android:background="@drawable/blanco_post_border_style"
                android:padding="3sp">


                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imgsearc"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/btn_search"
                    android:layout_margin="5dp"
                    android:alpha="0.6"/>

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5sp"
                    android:hint="Lugar de recojida"
                    android:background="@drawable/blanco_post_border_style"
                    android:singleLine="true"
                    android:padding="2sp"
                    android:textColor="#757575"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>



            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="30sp">

        <Button
            android:id="@+id/btn_servicio"
            android:layout_width="270sp"
            android:layout_height="35sp"
            android:textSize="12sp"
            android:text="Solicitar Servicio"
            android:background="@drawable/fondo_post_border_style"
            android:textColor="@color/colorBlanco"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="15px"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<Button
                android:id="@+id/btn_n1"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Especifico"
                android:layout_weight="1"
                android:background="@drawable/fondo_post_border_style"
                android:textColor="@color/colorBlanco"/>

            <Button
                android:id="@+id/btn_n2"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="topico"
                android:layout_weight="1"
                android:background="@drawable/fondo_post_border_style"
                android:textColor="@color/colorBlanco"/>
-->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
