<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    android:paddingTop="@dimen/espacio"
    android:id="@+id/mRlView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:orientation="vertical"
            android:padding="15sp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />


            <ImageView
                android:id="@+id/camara1"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/camara"
                android:onClick="camara1" />

            <TextView
                android:id="@+id/txt_camara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/fotoU"
                android:textColor="@color/colorBlanco"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="@drawable/blanco_post_border_style">

                    <ImageView

                        android:layout_gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/person"
                        android:background="@drawable/fondoicono_post_border_style"/>

                    <EditText
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_nombre"
                        android:hint="@string/nombreU"
                        android:inputType="textAutoCorrect"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:paddingLeft="5sp"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorAzulClaro"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>





                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="@drawable/blanco_post_border_style">

                    <ImageView

                        android:layout_gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/person"
                        android:background="@drawable/fondoicono_post_border_style"/>

                    <EditText
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_apellido"
                        android:hint="@string/apellidoU"
                        android:inputType="textAutoCorrect"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:paddingLeft="5sp"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorAzulClaro"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="@drawable/blanco_post_border_style">

                    <ImageView

                        android:layout_gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_llamar"
                        android:background="@drawable/fondoicono_post_border_style"/>

                    <EditText
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_celular"
                        android:hint="@string/celularU"
                        android:inputType="phone"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:paddingLeft="5sp"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorAzulClaro"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="@drawable/blanco_post_border_style">

                    <ImageView

                        android:layout_gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/email"
                        android:background="@drawable/fondoicono_post_border_style"/>

                    <EditText
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_correo"
                        android:hint="@string/correoU"
                        android:inputType="textEmailAddress"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:paddingLeft="5sp"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorAzulClaro"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="@drawable/blanco_post_border_style">

                    <ImageView

                        android:layout_gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/candado"
                        android:background="@drawable/fondoicono_post_border_style"/>

                    <EditText
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_passwor"
                        android:hint="@string/passwordU"
                        android:inputType="textPassword"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:paddingLeft="5sp"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorAzulClaro"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:orientation="horizontal"
                    android:background="@drawable/blanco_post_border_style">

                    <ImageView

                        android:layout_gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/candado"
                        android:background="@drawable/fondoicono_post_border_style"/>

                    <EditText
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_passwor1"
                        android:hint="@string/comfPasswordU"
                        android:inputType="textPassword"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/blanco_post_border_style"
                        android:paddingLeft="5sp"
                        android:textStyle="normal"
                        android:textColorHint="@color/colorAzulClaro"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20sp" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/blanco_post_border_style"
                    android:onClick="validar"
                    android:text="@string/registrarse"
                    android:textColor="@color/colorFondo"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlanco"
        android:background="@color/colorTransparente"
        android:text="@string/terminosycondidiones"
        android:gravity="center"
        android:textSize="16sp"
        android:inputType="textCapCharacters"
        android:onClick="terminos"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>