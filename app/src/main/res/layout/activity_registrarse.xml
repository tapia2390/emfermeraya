<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mRlView">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/blue_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Registro"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="20sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/camara1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/camara2"
                    android:onClick="camara1"/>

                <TextView
                    android:id="@+id/txt_camara1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/fotoU"
                    android:clickable="true"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp" />

            </LinearLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_nombre"
                        android:layout_toRightOf="@+id/username_icon"
                        android:hint="Nombre"
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/username_icon"
                        android:src="@drawable/user2"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12.7dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_apellido"
                        android:layout_toRightOf="@+id/icon1"
                        android:hint="Apellido"
                        android:textSize="12sp"
                        android:paddingLeft="19dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/icon1"
                        android:src="@drawable/user2"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12.7dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_celular"
                        android:layout_toRightOf="@+id/icon2"
                        android:hint="Celular"
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/icon2"
                        android:src="@drawable/phone"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12.7dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_correo"
                        android:layout_toRightOf="@+id/icon3"
                        android:hint="Correo"
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="15dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/icon3"
                        android:src="@drawable/email"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12.7dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_passwor"
                        android:layout_toRightOf="@+id/icon4"
                        android:hint="Contraseña"
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/icon4"
                        android:src="@drawable/password"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12.7dp"
                    android:background="@drawable/blue_border_rounded_cornwe">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/txt_passwor1"
                        android:layout_toRightOf="@+id/icon5"
                        android:hint="Confirmar contraseña"
                        android:textSize="12sp"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:paddingBottom="15dp"
                        android:maxLength="10"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/icon5"
                        android:src="@drawable/password"
                        android:layout_width="14.7dp"
                        android:layout_height="10.3dp"
                        android:layout_marginLeft="17dp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="18.7dp"
                    android:onClick="validar"
                    android:text="@string/registrarse"
                    android:background="@drawable/blue_border_rounded_cornwe2"

                    />



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorVerdeOscuro"
                    android:background="@color/colorTransparente"
                    android:text="@string/terminosycondidiones"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:inputType="textCapCharacters"
                    android:onClick="terminos"
                    android:layout_alignParentBottom="true"/>

            </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>